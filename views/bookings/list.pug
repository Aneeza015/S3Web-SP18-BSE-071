extends ../layout

block content
     .row
        .col-sm-8
            h2 Booking List
        .col-sm-4
            a(href="/bookings/add", class="btn btn-success float-right" ) Add    
        table.table
            thead
                tr
                    th Name
                    th Table No
                    th Date
                    th Actions
            tbody
                each product in products
                    tr
                        td=product.name
                        td=product.table_no
                        td=product.date
                        td
                            a(href="/bookings/delete/"+product._id, class="btn btn-danger") Delete
